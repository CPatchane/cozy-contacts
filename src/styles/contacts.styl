@require 'settings/palette.styl'
@require 'components/table.styl'
@require 'components/empty.styl'

.fix-modal-menu
    margin-right 2rem

.coming-soon
    box-sizing border-box
    display inline-flex
    align-items center
    background malachite
    color white
    min-height 2.5rem
    padding .5rem 1rem
    border-radius .4rem
    position relative
    margin-right .4rem

    &:after
        content ''
        width 0
        height 0
        border-top .4rem solid transparent
        border-bottom .4rem solid transparent
        border-left .4rem solid malachite
        position absolute
        left 100%
        top .8rem

.list-wrapper
    width 100%
    max-width 80rem
    margin 0 auto
    box-shadow 0 4px 4px 0 silver

.topbar
    width 100%
    max-width 80rem
    margin .75rem auto
    display flex

    .topbar__left
        flex 1

.actions
    display flex

$reset-list
    list-style none
    padding-left 0
    margin 0

.list-contact
    @extend $table
    @extend $reset-list

.sublist-contact
    @extend $reset-list

    :last-child
        .contact
            border 0

.contact
    @extend $table-row
    color coolGrey
    cursor pointer

    +small-screen()
        flex-direction column
        align-items flex-start
        height auto

.contact-selection
    position absolute
    left .5rem

.contact-identity
    @extend $table-cell
    @extend $table-cell--primary
    display inline-flex
    align-items center
    flex-basis 30%
    padding-left 2rem

.contact-firstname
    margin-left 1rem

.contact-lastname
    font-weight bold

.contact-phone
    @extend $table-cell
    flex 0 0 12rem

.contact-email
    @extend $table-cell
    flex-basis 30%

+small-screen()
    .contact-identity
    .contact-phone
    .contact-email
        flex-basis auto
        padding .3rem 1rem

.divider
    @extend $table-divider

.menu__item--danger
    color pomegranate

.list-empty
    @extend $empty

    &:before
        background-image embedurl('../assets/icons/empty-contact-list.svg')
